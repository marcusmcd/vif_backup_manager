#include "stdio.h"
#include "time.h"

#include "util.h"

/*!
   takes a pointer to a string that will have the date copied into it.
   The date will be in the format MM-DD-YYYY.
   @param a pointer to the string that the date will be written to.
 */
void date_string(char* string_loc)
{
    time_t rawtime;
    struct tm * timeinfo;

    time (&rawtime);
    timeinfo = localtime (&rawtime);
    strftime(string_loc,11,"%m-%d-%Y",timeinfo);
}
